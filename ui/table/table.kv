<TableBody>:
    viewclass: 'DataTableCell'
    bar_width: dp(15)
    scroll_wheel_distance: 50
    scroll_type: ['bars']

    TableGridLayout:
        cols: root.table.cols
        default_size: None, 40
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'lr-tb'
                    
<ColumnResizer>:
    canvas.before:
        Color:
            rgba: 0.7, 0.7, 0.7, 1
        Rectangle:
            pos: self.center_x, self.y
            size: dp(1), self.height

<SortableHeader>:
    halign: "left"
    padding: dp(5), 0
    shorten: True
    shorten_from: "right"
    text_size: self.width, None
    Image:
        source: "ui/triangle_up.png" if self.parent.direction == -1 else "ui/triangle_down.png"
        opacity: 1 if self.parent.direction != 0 else 0
        center_y: self.parent.center_y
        height: dp(12)
        width: dp(12)
        x: self.parent.right - self.width

<ColumnLabel>:
    halign: "left"
    valign: "top"
    text_size: self.width, None
    size_hint: None, 1
    padding: dp(5), 0

<DataTableCell>:
    size_hint: None, None
    height: dp(40)
    canvas.before:
        Color:
            rgba: (0.1216, 0.1216, 0.1216, 1.0) if (self.index % 2 == 0) else (0.2, 0.2, 0.2, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        shorten: True
        shorten_from: "right"
        size_hint: None, 1
        text: root.text
        width: root.width
        pos: root.pos
        halign: 'left'
        valign: 'middle'
        text_size: self.size
        padding_x: 10