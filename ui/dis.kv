<MainWindow>:
    ArrowRenderer
    Minimap
    RV
    
    GotoPosition:
        id: goto_position
        opacity: 0
        disabled: True
        size_hint: None, None
        width: dp(240)
        height: dp(32)
        pos_hint: { "center_x": 0.5, "top": 1 }

    Keyboard

<ArrowRenderer>:
    size_hint: None, 1
    width: dp(15) * 12
    pos_hint: { "left": 1, "top": 1 }

<Minimap>:
    size_hint: None, 1
    width: dp(15)
    pos_hint: { "right": 1, "top": 1 }

<RV>:
    id: disassembler_view
    size_hint: 1, 1
    bar_width: dp(15)
    scroll_wheel_distance: 50
    scroll_type: ['bars', 'content']
    viewclass: 'SectionPanel'

    RecycleBoxLayout:
        size_hint: None, None
        height: self.minimum_height
        orientation: 'vertical'

<SectionPanel>:
    padding: 0
    size_hint: None, None
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 1, 0, 0, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height