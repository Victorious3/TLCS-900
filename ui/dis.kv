<MainWindow>:
    RV

<RV>:
    bar_width: 10
    scroll_type: ['bars', 'content']
    viewclass: 'SectionPanel'

    RecycleBoxLayout:
        default_size_hint: 1, None
        size_hint: 1, None
        height: self.minimum_height
        orientation: 'vertical'

<SectionPanel>:
    size_hint: 1, None
    height: dp(1000)
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 1, 0, 0, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height